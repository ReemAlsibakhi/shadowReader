<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:background="@drawable/lesson_item_shape"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp">

        <ImageView
            android:id="@+id/img_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/image_lesson_shape"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_lessons_icons" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/img_lesson"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_paragraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="paragraph 1 "
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:id="@+id/img_watched"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:src="@drawable/ic_complete"-->
<!--                    />-->

                <TextView
                    android:id="@+id/tv_watched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/_11ssp" />
               <RatingBar
                   android:layout_width="@dimen/_10sdp"
                   android:layout_height="@dimen/_10sdp"
                   android:numStars="1"
                   android:layout_marginStart="@dimen/_9sdp"
                   />
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="@dimen/_3sdp"-->
<!--                    android:fontFamily="@font/roboto_regular"-->
<!--                    android:text="4"-->
<!--                    android:textColor="#D0D0D0"-->
<!--                    android:textSize="@dimen/_11ssp" />-->
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_7sdp"
        android:background="@drawable/selected_item_shape"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_right_arrow_essons" />

</RelativeLayout>