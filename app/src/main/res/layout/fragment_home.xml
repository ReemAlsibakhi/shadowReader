<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/colorWhite"
    tools:context=".fragment.HomeFragment">
    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_home__background" />
    <!--   <RelativeLayout-->
    <!--    android:id="@id/relative"-->
    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="wrap_content"-->
    <!--    android:paddingStart="@dimen/_16sdp"-->
    <!--    android:background="@drawable/ic_home__background">-->
    <!--      <ImageView-->
    <!--        android:layout_width="wrap_content"-->
    <!--         android:layout_height="wrap_content"-->
    <!--          android:layout_alignParentEnd="true"-->
    <!--         android:src="@drawable/ic_rectangle_home"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_37sdp"
        android:paddingEnd="@dimen/_16sdp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white"/>
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05*****"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Name"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/colorYellow"/>
        </LinearLayout>

        <!--       <LinearLayout-->
        <!--           android:layout_width="wrap_content"-->
        <!--           android:layout_height="wrap_content"-->
        <!--           android:orientation="vertical"-->
        <!--           android:layout_marginTop="@dimen/_40sdp">-->
        <LinearLayout
            android:id="@+id/first_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_36sdp"
            android:paddingTop="@dimen/_30sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:background="@drawable/semester_backg_shape"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Semester"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorPrimary"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_home_arrow_on" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/second_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingTop="@dimen/_30sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:background="@drawable/semester_backg_shape"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Semester"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorPrimary"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_home_arrow_off" />
        </LinearLayout>
    </LinearLayout>
    <!--   </LinearLayout>-->

</RelativeLayout>
