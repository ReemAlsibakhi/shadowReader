<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:background="@drawable/lesson_item_shape"
        android:paddingStart="@dimen/_40sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tv_lessonName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Unit One - New Friends"
                   android:gravity="start"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/_12ssp" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>
               <TextView
                   android:id="@+id/tv_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="7/8/2020"
                   android:gravity="end"
                   android:textColor="#A2A2A2"
                   android:drawablePadding="@dimen/_5sdp"
                   android:drawableStart="@drawable/ic_date"
                   android:textSize="@dimen/_8ssp" />

           </LinearLayout>


                <TextView
                    android:id="@+id/tv_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="It Has Roots In A Piece Of Classiyical CA Literature From 45 BC."
                    android:textColor="@color/textColorLight"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_7sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_notification_icons" />

</RelativeLayout>