<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:paddingTop="@dimen/_16sdp"
    android:layoutDirection="ltr"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Skip"
        android:textSize="@dimen/_12ssp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/roboto_regular"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        style="?borderlessButtonStyle"
        android:background="@drawable/skip_button_shape"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpIntroSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_skip"
        android:layout_marginTop="@dimen/_5sdp"/>

    <com.reemsib.shadowreader.activity.IndicatorLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        app:indicatorCount="3" />
    <Button
        android:id="@+id/btn_getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Get Started"
        android:paddingStart="@dimen/_37sdp"
        android:paddingEnd="@dimen/_37sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_9sdp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/roboto_bold"
        android:textAllCaps="false"
        android:background="@drawable/started_button_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_15sdp"/>

</RelativeLayout>